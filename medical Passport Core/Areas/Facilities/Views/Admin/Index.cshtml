@section Scripts{ 
    <script>
        $('.activate').click((e) => {
            e.preventDefault()
            let clicked_link = $(e.target)
            console.log(clicked_link.data('active'))
            if (clicked_link.data('active') == 0) {
                clicked_link.data('active', 1) 
                clicked_link.parent().removeClass('not-active')
                clicked_link.text('De-Activate')

            } else {
                clicked_link.data('active', 0)
                clicked_link.parent().addClass('not-active')
                clicked_link.text('Activate')
            }
        })
    </script>
}
